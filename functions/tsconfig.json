{
    "compilerOptions": {
        "module": "nodenext",
        "target": "esnext",
        "noImplicitAny": true,
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "paths": {
            "*": [
                "src/types/*",
                "node_modules/@types/*",
                "node_modules/*",
            ]
        },
        "types" : [
            "chai",
            "node"
        ],
        "lib" : [
            "es2017"
        ]
    },
    "include": [
        "src/**/*"
    ]
}