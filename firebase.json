{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/issuestats",
        "function": "RepoIssueStatistics"
      },
      {
        "source": "/samscorebadge",
        "function": "SamScoreBadge"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    }
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ]
}
